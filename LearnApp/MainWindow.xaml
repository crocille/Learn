<Window x:Class="LearnApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnApp"
        mc:Ignorable="d"
        MinHeight="450" MinWidth="800"
        Title="Школа языков &quot;Леарн&quot;" Height="800" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="300"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Image Source="/Resources/school_logo.png" />
            <TextBlock FontSize="50" VerticalAlignment="Center" Text="Школа языков &quot;Леарн&quot;"/>
        </StackPanel>
        <Frame Name="FrNav" Grid.Row="1"/>
    </Grid>
</Window>
