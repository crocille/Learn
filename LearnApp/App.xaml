<Application x:Class="LearnApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LearnApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="Add" Color="#FFE7FABF"/>
        <SolidColorBrush x:Key="Accent" Color="#FF04A0FF"/>
        <!--TextBlock-->
        <Style x:Key="BaseTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}"/>

        <!--Button-->
        <Style x:Key="BaseButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="{StaticResource Add}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource BaseButton}"/>

        <!--TextBox-->
        <Style x:Key="BaseTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource BaseTextBox}"/>
    </Application.Resources>
</Application>
