<Page x:Class="LearnApp.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Margin="10" Grid.Row="0" Content="Обычный режим" Click="BtBaseModeClick"/>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel>
            <TextBox Grid.Row="1" x:Name="TbAdminCode" Margin="5"/>
            <Button Grid.Row="2" Content="Режим администратора" Margin="5" Click="BtAdminClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
