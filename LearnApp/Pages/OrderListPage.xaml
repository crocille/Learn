<Page x:Class="LearnApp.Pages.OrderListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderListPage">

    <Grid>
        <DataGrid Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование услуги" Width="*"/>
                <DataGridTextColumn Header="ФИО клиента"  Width="*"/>
                <DataGridTextColumn Header="Email" Width="*"/>
                <DataGridTextColumn Header="Телефон" Width="*"/>
                <DataGridTextColumn Header="Дата/Время записи" Width="*"/>
                <DataGridTextColumn Header="Осталось до начала" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
